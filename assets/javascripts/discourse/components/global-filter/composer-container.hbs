{{#if this.canDisplay}}
  <div class="global-filter-composer-container">
    {{#if this.siteSettings.display_global_filters_as_dropdown_in_composer}}
      <GlobalFilterChooser
        @value={{#if @composer.tags}}{{@composer.tags}}{{else}}[]{{/if}}
        @onChange={{action (mut @composer.tags)}}
      />
    {{else}}
      {{#each this.globalFilters as |filter|}}
        <GlobalFilter::ComposerItem
          @filter={{filter}}
          @selectedTags={{#if @composer.tags}}{{@composer.tags}}{{else}}[]{{/if}}
          @checked={{this.checked}}
          @tagParam={{this.tagParam}}
        />
      {{/each}}
    {{/if}}
  </div>
{{/if}}
